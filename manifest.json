{
    "name": "Tab Switcher",
    "description" : "Extension to switch between tabs.",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "browser_action": {
      "default_popup": "hello.html",
      "default_icon": "hello_extensions.png"
    },
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "permissions": ["tabs", "storage"]
  }